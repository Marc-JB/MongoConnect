{
    "name": "mongo-connect",
    "version": "0.3.0",
    "description": "Experimental MongoDB lib for node",
    "private": false,
    "type": "commonjs",
    "main": "./build/main/index.js",
    "typings": "./build/main/index.d.ts",
    "scripts": {
        "build": "tsc -b ./src/main/",
        "lint": "eslint --ignore-path .gitignore .",
        "test": "tsc -b ./src/test/ && mocha --recursive --exit ./build/test/",
        "crossinstall": "npm install --package-lock-only && yarn install"
    },
    "engineStrict": true,
    "engines": {
        "node": ">= 10.9.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Marc-JB/MongoConnect.git"
    },
    "author": "Marc",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Marc-JB/MongoConnect/issues"
    },
    "homepage": "https://github.com/Marc-JB/MongoConnect#readme",
    "dependencies": {
        "mongoose": "^5.10.18"
    },
    "devDependencies": {
        "@peregrine/test-with-decorators": "^0.1.5",
        "@types/mongoose": "^5.10.1",
        "@types/node": "^14.14.10",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "eslint": "^7.14.0",
        "typescript": "^4.1.2"
    }
}
